<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="attribute_index" path="/" methods="GET">
        <default key="_controller">AamantConfigurableAttributesBundle:AttributeDefinition:index</default>
    </route>

    <route id="attribute_show" path="/{id}/show" methods="GET">
        <default key="_controller">AamantConfigurableAttributesBundle:AttributeDefinition:show</default>
    </route>

    <route id="attribute_new" path="/new" methods="GET|POST">
        <default key="_controller">AamantConfigurableAttributesBundle:AttributeDefinition:new</default>
    </route>

    <route id="attribute_edit" path="/{id}/edit" methods="GET|POST">
        <default key="_controller">AamantConfigurableAttributesBundle:AttributeDefinition:edit</default>
    </route>

    <route id="attribute_delete" path="/{id}/delete" methods="DELETE">
        <default key="_controller">AamantConfigurableAttributesBundle:AttributeDefinition:delete</default>
    </route>

</routes>
